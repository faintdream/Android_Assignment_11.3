<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.akashdubey.image2dbdemo.MainActivity">

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:text="Name : "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameTV"
        android:layout_marginTop="30dp"
        android:text="Age" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/ageET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameET"
        android:layout_alignTop="@+id/ageTV"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/empPhotoTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ageET"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Employee Photo"
        android:textAlignment="center"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/photoIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empPhotoTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:maxHeight="250dp"
        android:maxWidth="250dp"
        android:minHeight="250dp"
        android:minWidth="250dp"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/ic_launcher" />
</RelativeLayout>
